{
  "extends": "@vue/tsconfig/tsconfig.json",
  "include": [
    "resources/**/*.ts",
    "resources/**/*.d.ts",
    "resources/**/*.vue",
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "resources/js/*"
      ]
    },
    "allowJs": true,
    "strict": false,
    "noImplicitAny": false,
    "lib": [
      "esnext.full",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "public"
  ]
}

